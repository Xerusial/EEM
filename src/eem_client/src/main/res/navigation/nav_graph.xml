<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="edu.hm.eem_client.view.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_settings_button"
            app:destination="@id/settingsActivity" />
        <action
            android:id="@+id/action_touch_list"
            app:destination="@id/lockedActivity" />
    </activity>
    <activity
        android:id="@+id/settingsActivity"
        android:name="edu.hm.eem_client.view.SettingsActivity"
        android:label="activity_settings"
        tools:layout="@layout/activity_settings" />
    <activity
        android:id="@+id/lockedActivity"
        android:name="edu.hm.eem_client.view.LockedActivity"
        android:label="activity_locked"
        tools:layout="@layout/activity_locked" />
</navigation>